{
	"name": "spacebox-ui",
	"displayName": "SpaceBox UI Enhancer",
	"description": "Experience enhanced customization of VSCode UI, featuring animations, blur effects, and more.",
	"icon": "images/icon.png",
	"publisher": "SpaceBox",
	"repository": "https://github.com/amnweb/SpaceBox-UI-Enhancer",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Other"
	],
	"galleryBanner": {
		"color": "#0d1116",
		"theme": "dark"
	},
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "SpaceBox UI Enhancer Configuration",
			"properties": {
				"spacebox-ui.defaultStyle": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable the default style SpaceBoxUI style.",
                    "order": 1
				},
				"spacebox-ui.importCss": {
					"type": "string",
					"default": "",
					"description": "Path to the custom CSS file to be applied.",
                    "order": 2
				}
			}
		},
		"commands": [
			{
				"command": "spacebox-ui.modifyFiles",
				"title": "SpaceBox Enable UI Enhancer"
			},
			{
				"command": "spacebox-ui.restoreSettings",
				"title": "SpaceBox Disable UI Enhancer"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.80.0",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3"
	}
}
